<!DOCTYPE html>
<html>

  <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, user-scalable=no" />
      <title>{{gallery.title}} - {{album.title}}</title>
      <link rel="stylesheet" href="{{relative 'public/lightgallery/css/lightgallery-bundle.min.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/videojs/video-js.min.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/core.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/theme.css'}}" />
  </head>

  <body>

    {{> content}}
    {{> video-loader}}

    <!-- VideoJS -->
    <script src="{{relative 'public/videojs/video.core.novtt.min.js'}}"></script>
    <!-- LightGallery -->
    <script src="{{relative 'public/lightgallery/js/lightgallery.min.js'}}"></script>
    <!-- LightGallery plugins -->
    <script src="{{relative 'public/lightgallery/js/lg-autoplay.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery/js/lg-fullscreen.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery/js/lg-hash.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery/js/lg-thumbnail.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery/js/lg-video.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery/js/lg-zoom.min.js'}}"></script>

    <script>
      lightGallery(document.getElementById('media'), {
        plugins: [lgZoom, lgThumbnail, lgVideo, lgHash, lgAutoplay, lgFullscreen],
        autoplayFirstVideo: false,
        gotoNextSlideOnVideoEnd: false,
        preload: 'none',
        videojs: true,
        videojsOptions: {
          aspectRatio: '4:3',
          autoplay: true,
          controls: true,
          disablePictureInPicture: true,
          loop: true,
          preload: 'auto'
        },
      });
    </script>

    {{> analytics}}

  </body>

</html>
